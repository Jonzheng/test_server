
video {
    width:700rpx;
    display:inline-block;
    line-height:0;
    overflow:hidden;
    position:relative;
}

.black{
    background-color:#555;
    color:white;
    height:100%;
    flex:1;
}

.page-body-info {
  display: flex;
  margin-top: 40rpx;
  padding: 0;
  height: 360rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}

.btn-ori{
    flex-shrink: 0; /*固定大小*/
    margin-left: 10rpx;
    border-right: 3rpx #ccc solid;
    width:100rpx;
    height:100rpx;
}

.ele-ori {
    flex-grow: 1; /*有空间剩余会放大*/
    width: 6rpx;
    background-color: #bbb;
    box-shadow: 0px 0px 1px 1px #fff;
}

.box-ori{
    height: 100rpx;
    display:flex; /*无敌布局*/
    align-items:center; /*中轴对齐*/
    overflow: hidden;
}

.image {
  width: 100%;
  height: 360rpx;
}

label{
    display:inline-block;
    min-width:116rpx;
    margin-right:20rpx;
}

.prev{
    background-color:#fff;
    border-top: 1rpx solid #eee;
    text-align: center;
}